<%= image_tag "17331.jpg" %>
<div class="text">
	<h3>Administrator operation platform</h3>
	<p>Here you can find all the teachers and students information, and its management</p>
</div>
<div class="right">
	当前登录用户:<%= @user.name %>
	<%= link_to '新建用户', :applicants_new  %>
	<%= link_to '退出当前登录', root_path  %>	
</div>
<div class="hexagon icon"></div>
<div class="hexagon icon"></div>
<div class="hexagon icon"></div>
<div class="container">
	<table>
		<tr>
			<th>班级</th>
			<th>用户名</th>
			<th colspan="2">操作</th>
		</tr>
		<% @users.each do |user| %>
		<tr>
			<% if !user.rooms.empty? %>
			<td><%= user.rooms.first.name %></td>
			<% else %>
			<td>暂无班级信息</td>
			<% end %>
			<td><%= user.name %></td>
			<td><%= link_to 'modify', edit_admin_path(user) %></td>
			<td><%= link_to 'delete', admin_path(user), method: :delete, data: { confirm: '你确定要删除这个用户?' } %></td>
		</tr>
		<% end %>
	</table>
</div>
<style type="text/css">

	body {
		width: 1840px;
		height:800px;
		font-family: PmingLiu;
		font-size: 28px;
		-webkit-filter: blur(0.1px);
		color:#3d3b4f;
		margin:0px;
		background-color: #f0f0f4;
	}

	img{
		width: 1839px;
		height:450px;
		background-image: url("17331.jpg");
		background-repeat: no-repeat;
		-webkit-filter: brightness(70%);
	}

	.container{
		color: #4c8dae;
		width: 910px;
		position: absolute;
		top: 550px;
		left: 550px; 
	}

	.text{
		width: 650px;
		color: #f2ecde;
		font-family: Georgia;
		position: absolute;
		top: 130px;
		left:550px;
		text-align: center;
	}

	a{
		text-decoration:none;
		color: #4c8dae;
	}

	.icon{
		text-align: center;
		margin-left: 180px;
		float: right;
		position: absolute;
		top: -30px;
		left: -650px;
	}

	.right{
		width: 100%;
		color: #a1afc9;
		float:right;
		position: absolute;
		top:15px;
		left: 30px;
	}

	.right a{
		color: #a1afc9;
	}

	tbody{
		text-align: center;
	}

	th{
		width: 200px;
	}

	td{
		padding-top: 15px;
	}

	.hexagon {
		width: 100px;
		height: 55px;
		background: #00e079;
		position: relative;
	}

	.hexagon:before {
