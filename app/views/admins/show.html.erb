<h4>管理员操作平台</h4>
 <p>当前登录用户:<%= @user.name %></p>
<%= link_to '新建用户', new_admin_path  %>
<table>
	<tr>
		<th>班级</th>
		<th>老师</th>
		<th>操作</th>
	</tr>
	
	<% @users.each do |user| %>
		<tr>
			<td><%= user.class_name %></td>
			<td><%= user.teacher_name %></td>
			<td><%= link_to '修改用户', edit_admin_path(user) %></td>
			<td><%= link_to '删除用户', admin_path(user), method: :delete, data: { confirm: '你确定要删除这个用户?' } %>
				
			</td>
		</tr>
	<% end %>
	
</table>
