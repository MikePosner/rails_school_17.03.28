<div class="container">
  <div class="back"></div>
  <div class="content">
    <h3>System login</h3>

    <% if flash[:login_error] %>
      <p><%= flash[:login_error] %></p>
    <% end %>

    <%= form_for :session, url: :sessions_login do |f| %>

     	<p>
    		<%= f.label :Name %>
    		<%= f.text_field :name %>
    	</p>
    	<p>
    		<%= f.label :Word %>
    		<%= f.password_field :password%>
    	</p>
    	<div class="a"><%= link_to 'Register', applicants_new_path %></div>
      <%= f.button "Login" %>
    <% end %>
  </div>

</div>
